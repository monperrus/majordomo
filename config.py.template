import os


class Config:
    # Email credentials for the dedicated inbox
    EMAIL_ADDRESS   = os.getenv("EMAIL_ADDRESS", "agent@yourdomain.com")
    EMAIL_PASSWORD  = os.getenv("EMAIL_PASSWORD", "your-password")

    # IMAP (incoming)
    IMAP_HOST = os.getenv("IMAP_HOST", "imap.gmail.com")
    IMAP_PORT = int(os.getenv("IMAP_PORT", "993"))

    # SMTP (outgoing)
    SMTP_HOST = os.getenv("SMTP_HOST", "smtp.gmail.com")
    SMTP_PORT = int(os.getenv("SMTP_PORT", "465"))

    # LLM — any OpenAI-compatible endpoint (OpenRouter, OpenAI, local proxy, …)
    ANTHROPIC_AUTH_TOKEN = os.getenv("ANTHROPIC_AUTH_TOKEN", "your-api-key")
    ANTHROPIC_BASE_URL   = os.getenv("ANTHROPIC_BASE_URL", "https://openrouter.ai")  # e.g. https://api.openai.com
    LLM_MODEL            = os.getenv("LLM_MODEL", "x-ai/grok-4-fast")               # any model available on the endpoint

    # Agent identity
    AGENT_NAME    = os.getenv("AGENT_NAME", "Alex")
    AGENT_PERSONA = os.getenv(
        "AGENT_PERSONA",
        "You are a professional email assistant for Acme Corp, answering customer questions about products and support. Be helpful, concise, and friendly."
    )

    # How often to check for new emails (seconds)
    POLL_INTERVAL_SECONDS = int(os.getenv("POLL_INTERVAL_SECONDS", "60"))
